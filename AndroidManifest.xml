<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.baseballstats"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.baseballstats.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.baseballstats.PitchStatsActivity"
            android:label="@string/title_activity_pitch_stats" >
        </activity>
        <activity
            android:name="com.example.baseballstats.FielderStatsActivity"
            android:label="@string/title_activity_fielder_stats" >
        </activity>
        <activity
            android:name="com.example.baseballstats.LeagueStatsPitchActivity"
            android:label="@string/title_activity_league_stats_pitch" >
        </activity>
        <activity
            android:name="com.example.baseballstats.LeagueStatsFielderActivity"
            android:label="@string/title_activity_league_stats_fielder" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />


</manifest>
